    "postcss-discard-comments": "^2.0.2",
    "postcss-import": "^7.1.3",
    "postcss-mixins": "^3.0.2",
    "postcss-simple-vars": "^1.1.0",
    "precss": "^1.3.0",
    "reinstall": "^1.1.0",
    "svg-sprite": "^1.2.17",
